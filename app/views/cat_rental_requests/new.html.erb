<h1>Request a Cat!</h1>
<form action="<%= cat_rental_requests_path %>" method="post">

  <label for="cat">Pick a Cat</label>
  <select name="cat_rental_request[cat_id]">
    <% @cats.each do |cat| %>
    <option value="<%= cat.id %>" <%= cat.id == @request.cat_id ? "selected" : "" %>>
      <%= cat.name %>
    </option>
    <% end %>
  </select>
  <br>

  <label for="req_start_date">Start date</label>
  <input name="cat_rental_request[start_date]" id="req_start_date" type="date"
  value="<%= @request.start_date.to_s %>"></input>
  <br>
  <label for="req_end_date">End date</label>
  <input name="cat_rental_request[end_date]" id="req_end_date" type="date"
  value="<%= @request.end_date.to_s %>"></input>

  <br> <input type="submit" value= "Submit request!" >
</form>
