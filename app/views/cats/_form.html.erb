<% action_path = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% http_request = (cat.persisted? ? "patch" : "post") %>
<% button_msg = (cat.persisted? ? "Update Cat!" : "Build new Cat") %>

<form action="<%= action_path %>" method="post">
  <input type="hidden" name="_method" value=<%= http_request %>>
  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name" type="text" value="<%=cat.name%>">
  <br>

  <label>Sex</label>
  <div>
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="M"
      <%= cat.sex == "M" ? "checked" : "" %> >
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="cat_sex_f" type="radio" value="F"
      <%= cat.sex == "F" ? "checked" : "" %>>
    <label for="cat_sex_f">Female</label>


  </div>
  <br>

  <label for="cat_description">Description</label>
  <textarea name="cat[description]" id="cat_description" ><%=cat.description %>
  </textarea>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <% colors.each do |color| %>
    <option value="<%= color.to_s %>" <%= cat.color == color.to_s ? "selected" : "" %>>
      <%= color.to_s %>
    </option>
    <% end %>
  </select>
  <br>

  <label for="cat_birth_date">Birth date</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" value="<%= cat.birth_date.to_s %>"></input>

  <br> <input type="submit" value= "<%= button_msg %>" >
</form>

<a href="<%=cats_url%>">Return to Index</a><br>
